<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" partent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="movie_detail_text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/movie_detail_text_label_margin_start</item>
        <item name="android:layout_marginTop">@dimen/movie_detail_text_label_margin_top</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">@dimen/movie_detail_text_label_size</item>
    </style>

    <style name="movie_detail_text_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/movie_detail_text_value_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/movie_detail_text_value_margin_end</item>
        <item name="android:layout_marginTop">@dimen/movie_detail_text_value_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/movie_detail_text_value_margin_bottom</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">@dimen/movie_detail_text_value_size</item>
    </style>

</resources>
